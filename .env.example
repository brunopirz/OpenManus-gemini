# Exemplo de arquivo de variáveis de ambiente para OpenManus
# Copie este arquivo para .env e preencha com suas chaves reais

# ===== CONFIGURAÇÕES PYTHON =====
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# ===== CHAVES DE API =====

# Google Gemini API (Recomendado)
GOOGLE_API_KEY=your_google_api_key_here

# Anthropic Claude API (Opcional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API (Opcional)
OPENAI_API_KEY=your_openai_api_key_here

# Azure OpenAI (Opcional)
AZURE_OPENAI_API_KEY=your_azure_api_key_here
AZURE_OPENAI_ENDPOINT=your_azure_endpoint_here
AZURE_DEPLOYMENT_ID=your_deployment_id_here
AZURE_API_VERSION=2024-08-01-preview

# AWS Bedrock (Opcional)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-west-2

# ===== CONFIGURAÇÕES DE REDE =====

# Porta para APIs (se necessário)
PORT=8000

# ===== CONFIGURAÇÕES DE LOG =====

# Nível de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===== CONFIGURAÇÕES OPCIONAIS =====

# Timeout para requisições (em segundos)
REQUEST_TIMEOUT=30

# Máximo de tokens por resposta
MAX_TOKENS=8192

# Temperatura para geração de texto (0.0 a 1.0)
TEMPERATURE=0.0

# ===== CONFIGURAÇÕES DE DESENVOLVIMENTO =====

# Modo debug (true/false)
DEBUG=false

# Recarregar automaticamente em mudanças (true/false)
AUTO_RELOAD=false